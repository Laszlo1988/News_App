<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_text_style" parent="Base.TextAppearance.AppCompat.Title"/>

    <style name="section_text_style" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/body_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">2sp</item>
        <item name="android:paddingRight">2sp</item>
    </style>

    <style name="body_text_style" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/body_text</item>
    </style>

</resources>
