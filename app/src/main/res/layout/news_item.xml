<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/item_height"
    android:orientation="vertical"
    android:padding="@dimen/general_padding_margin_small"
    android:paddingBottom="@dimen/general_padding_margin_small">

    <TextView
        android:id="@+id/header"
        style="@style/title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAllCaps="true"
        tools:text="General elections held on Sunday" />

    <TextView
        style="@style/section_text_style"
        android:id="@+id/section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        tools:text="World news" />

    <TextView
        android:id="@+id/body"
        style="@style/body_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/general_padding_margin_tiny"
        tools:text="Long placeholder location that should wrap to more than 2 lines of text.\nLong placeholder location that should wrap to more than 2 lines of text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/general_padding_margin_tiny">

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="by #John Smith" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            tools:text="Mar 6, 2010" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/general_padding_margin_small"
            android:layout_toLeftOf="@id/date"
            android:textSize="12sp"
            tools:text="3:00 PM" />

    </RelativeLayout>
</LinearLayout>
